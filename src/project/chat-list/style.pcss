@import 'base/vars/vars.pcss';


.chat-list-cnt {
  &-is-empty {
    position: absolute;
    top: 45%;
    transform: translateY(-50%);
    width:100%;
    margin:0 auto;
    text-align:center;
    color: $color__gray;
    font-size: 24px;
    margin-top: -25px;
    padding-top: 240px;
    background: url("img/chats_inactive.svg") no-repeat 50% 0;
    color: #595959;
    line-height: 38px;
    @media(--mobile) {
      font-size:32px;
    }

    &__container {
      max-width:1050px;
      margin:0 auto;
      text-align: center;
      font-weight: bolder;
      img {
        display: inline-block;
        margin-bottom: 45px;
      }
    }
    &__banner{
      z-index: 9999;
      display: block;
      position: absolute;
      font-size: 24px;
      width: 100%;
      text-align: center;
      background-color: #ececec;
      bottom: 0px;
      //padding: 30px;
      padding-top: 30px;
      padding-bottom: 30px;
      color: #595959;
      font-weight: bolder;
      line-height: 30px;
      @media(--mobile) {
        display: block;
        position: absolute;
        font-size: 22px;
        width: 100%;
        text-align: center;
        background-color: #ececec;
        bottom: 98px;
        //padding: 30px;
        padding-top: 30px;
        padding-bottom: 30px;
        color: #595959;
        font-weight: bolder;
        line-height: 38px;
      }
      span{
        font-weight: 100;
      }
      span.want{
        font-weight: bold;
      }
    }
  }
  .chat-list {
    min-width: 750px;

    &-i {
      display: flex;

      height: 134px;
      padding: 12px;

      cursor: default;

      @media (--mobile) {
        height: 230px;
        padding: 20px 20px 20px 10px;
        //padding: 0;
      }
      @media (--ipad) {
        padding: 20px 20px 20px 10px;
        padding: 0;
      }

      &-photo {
        overflow: hidden;

        width: 110px;
        height: 110px;

        border-radius: 50%;

        flex-shrink: 0;
        @media (--mobile) {
          width: 190px;
          height: 190px;
        }
        img {
          display: block;

          width: 100%;
          height: 100%;

          border: none;
          /* temp */
          background: #fafafa;
        }
      }
      &-delete {
        transition: .2s all ease;
        font-family: $font__family__light;
        color: #FFFFFF;
        background: #EF3758;
        text-align: center;
        font-size: 2rem;
        line-height: 230px;
        float: right;
        width: 0;
        line-height: 174px;
        overflow: hidden;

        @media (--mobile) {
          line-height: 220px;
        }

        @media (--ipad) {
          line-height: 130px;
          font-size: 1.4rem;
        }
        &.open-delete {
          width: 230px;
        }
      }

      &-body {

        width: calc(100% - 110px);
        padding: 10px 0 10px 10px;

        color: $color__gray-dark;

        @media (--mobile) {
          padding: 20px 15px;
          width: calc(100% - 190px);
        }

        @media (--ipad) {
          padding: 20px 15px;
          //width: calc(100% - 190px);
        }

        .body-title {
          overflow: hidden;

          white-space: nowrap;
          text-overflow: ellipsis;

          font-size: 24px;
          line-height: 28.8px;

          @media (--mobile) {
            height: 47.5px;
            font-size: 38px;
            line-height: 45.6px;
          }
        }
        .body-status-time{
          display: flex;
          justify-content: space-between;
        }

        .body-status {
          font-size: 16px;
          line-height: 20.85px;

          @media (--mobile) {
            font-size: 24px;
            line-height: 36px;
          }
        }
        .body-time{
          display: inline;

          min-width: 60px;
          text-align: right;

          color: #b2b2b2;

          font-size: 17px;

          flex-shrink: 0;
          @media(--mobile) {
            font-size: 28px;
          }
        }
        .body-last-msg {

          display: flex;
          justify-content: space-between;
          align-items: center;

          color: #b2b2b2;

          font-size: 16px;
          line-height: 20.85px;

          b {
            font-weight: 700;
          }
          b::after{
            content: " ";
          }

          p{
            width: calc(100% - 75px);
            text-overflow: ellipsis;
            display: -webkit-box;
            overflow: hidden;
            height: 42px;
            @media (--mobile) {
              height: 76px;

              font-size: 28px;
              line-height: 38px;
            }
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
          }

        }
        .body-notify{
          display: flex;
          margin-top: 15px;
          width: 26px;
          height: 26px;

          border-radius: 25px;
          background: #EF3758;

          flex-shrink: 0;
          @media(--mobile) {
            width: 46px;
            height: 46px;
          }
          justify-content: center;
          align-items: center;
          span {
            color: white;

            font-size: 16px;
            line-height: 19.2px;

            @media(--mobile) {
              font-size: 28px;
              line-height: 33.6px;
            }

          }
        }
      }
      &:hover {
        background: #fafafa;
      }
    }
  }
}
