@import 'base/vars/vars.pcss';
.chat-msg-img{
  max-width: 260px;
  height: auto !important;
  cursor: pointer;
    margin-top: 5px;
    &-opacity{
        opacity: 0.5;
    }
}
.chat-msg-img-wrapper {
	&-show-large-img{
		height:100%;
		width: 100%;
		background: rgba(0,0,0,.8);
		position: fixed;
		top:0;
		left: 0;
		z-index: 9999;

		img { 
			max-width:100%;
			opacity: 1;
			position:absolute;
			top: 50%;
			left: 50%;
			transform: translateY(-50%) translateX(-50%);
		}
	}
}