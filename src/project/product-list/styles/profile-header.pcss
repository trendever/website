@import 'base/vars/vars.pcss';

.profile-header {
  /* position: relative;
  height: 130px;
  margin-bottom: 20px;
  text-align: left; */

  &__mobile-slider{
    width: 464px;
    height: 366px;
    padding-top: 25px;
    background-image: url(../img/mob.png), url(../img/shadow.png);
    background-repeat: no-repeat;
    background-size: 347px, 330px;
    background-position: 61px 25px, 80px -54px;
    display: inline-block;
    float: left;
    img{
      width: 283px;
      height: 263px;
    }
    @media(--smalldesktopH) {
      width: 342px;
      background-position: 0px 25px, 15px -65px;
    }
    @media(--tabletH) {
      width: 260px;
      background-position: 0px 85px, 60px 35px;
      background-size: 260px, 200px;
    }
    @media(--mobile) {
      display: none;
    }
    @media(--tabletandless) {
      display: none;
    }
  }

  &__mobile-slider-slide{
    width: 276px;
    height: 263px;
    display: inline-block;
    margin-top: 78px;
    /* background-image: url('../img/blue_slide.jpg');
    background-repeat: no-repeat; */
    @media(--tabletH) {
      margin-top: 137px;
    }
  }

  &__close-menu {
    cursor:pointer;
  }

  &__logo {
    position: absolute 30px * * 30px;

    &__img {
      cursor: pointer;
      border-radius: 50%;
      size: 80px;
    }
  }
  &__center {
    display: flex;
    justify-content: center;

    &__ic {
      margin: 0px 10px;
      transition: $btn-transition;
      text-decoration: none;
      color: $color__white;
      text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
      font-size: 26px;

      i{
        margin-top: 18px;
      }

      &:first-child{
        margin-left: 3px;
      }
      &:nth-child(3){
        margin-right: 0px;
      }

      &:hover {
        cursor: pointer;
        color: color($color__white shade(20%));
      }
    }
  }

  &__menu {
    position: absolute;
    top: 0;
    left: 50%;
    z-index: $z-index-popup-container;
    margin-left: -384px;

    &-btn {
      display: block;

      margin-top: 27px;

      cursor: pointer;
      text-align: left;

      @media (--mobile) {
       margin-top: 25px;
     }
     //justify-content: flex-end;
     &-label {
      display: inline-block;

      text-align: right;
      text-decoration: none;

      color: white;

      font-size: 31px;
      line-height: 100px;
    }
    &-icon {
      display: inline-block;
      color: #fff;
      font-size: 46px;
      padding: 0 30px;
      transition: $btn-transition;

      &:hover{
        cursor: pointer;
        color: color($color__white shade(20%));
      }


    }
  }

  &-links {

    position: absolute;
    z-index: 9999;
    top: 0;
    right: 0;
    left: 0;
    margin-left: -380px;
    margin: 0 auto;
    width: 1050px;
    @media (--ipad) {
      width: 100%;
    }
    @media (--mobile) {
      width: 100%;
    }

    &.__normal{

      & .profile-header__menu-link{
        background: rgba(255, 255, 255, 1);
        color: #595959;
        border-color: rgba(191, 191, 191, 1);
        &:last-child{
          color: #f03756;
        }
        &:hover {
          background: rgba(240, 240, 240, 1);
        }
        &:last-of-type {
         border-bottom-width: 1px;
       }
     }
     & .profile-header__close-menu{
      color: #31bebc;
    }
  }
}

&-link {
  display: block;
  cursor:pointer;

  width: 1050px;
  padding: 0 30px;

  text-align: center;
  text-decoration: none;

  color: white;
  border-bottom: 1px solid color(white a(.2));
  background: color(black a(.75));
  background: rgba(18, 48, 45, .85);
  font-size: 24px;
  line-height: 50px;

  @media (--ipad) {
    width: initial;
  }
  @media (--mobile) {
    font-size: 31px;
    line-height: 100px;
    width: 750px;
  }
  &:hover {
    background: color(black a(.9));
    background: rgba(18, 48, 45, .95);
  }
  &:last-of-type {
    border-bottom-width: 0;
  }

}

}

}
