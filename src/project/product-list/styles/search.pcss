@import 'base/vars/vars.pcss';

$height__desktop: 50px;
$height__mobile: 102px;
$height-tag-item: 22px;
$height-tag-item-desktop: 40px;
$height-tag-button: $height-tag-item;
$count-tags-close: 3;
$count-tags-open: 13;

.photo__title-row {
  display: none !important;
}

.__mirror {
  font-weight: 600;
  transform: scaleX(-1);
}

.change-col {
  position: absolute;
  width: 60px;
  display: block;
  height: 60px;
  right: 29px;
  top: 50%;
  margin-top: -30px;

  & > span {
    display: block;
    width: 60px;
    padding: 12px;
    height: 60px;
    display: none;

    &:hover {
      span {
        background: #595959;
      }
    }

    &.active {
      display: none;

      @media(--mobile) {
        display: block;
      }
    }
  }

  &__big {
    float: left;
    width: 15px;
    height: 15px;
    margin-right: 6px;
    margin-bottom: 6px;
    background: #b2b2b2;

    &:nth-child(even) {
      margin-right: 0;
    }
  }

  &__sm {
    float: left;
    width: 9px;
    height: 9px;
    margin-right: 4px;
    margin-bottom: 4px;
    background: #b2b2b2;

    &:nth-child(3n) {
      margin-right: 0;
    }
  }
}

.badge {
  left: -27px;
  display: inline-block;
  position: absolute;
  cursor: pointer;
  top: 12px;
  width: 25px;
  height: 25px;
  border-radius: 40px;
  background-color: $color__red__true;
  color: white;
  font-size: 16px;
  line-height: 27px;

  @media (--mobile) {
    width: 46px;
    height: 46px;
    left: -105px;
    top: 28px;
    font-size: 28px;
    line-height: 46px;
  }
}

.search-placeholder {
  z-index: 10;
  margin-bottom: 3px;
  // height: calc($height__desktop + 135px + $height-tag-button);

  @media (max-width: 750px) {
    height: calc($height__mobile + 155px + $height-tag-button);
    margin-bottom: 33px;
  }
}

#search {
  position: relative;
  z-index: 1;
  max-width: 1050px;
  background: white;

  &.fix-on-top {
    position: fixed;
    top: $height__desktop;

    @media (max-width: 750px) {
      top: $height__mobile;
    }
  }
}

.search-stub {
  max-width: 1050px;
  height: 50px;

  @media (--mobile) {
    width: 750px;
    height: 100px;
  }
}

.search-input {
  height: $height__desktop;
  border-bottom: 1px solid $color__gray;

  @media (--mobile) {
    height: $height__mobile;
  }

  &.glued {
    position: fixed;
    top: 2px;
    z-index: 100;
    max-width: 1050px;
    width: 100%;

    background-color: white;
    @media (--mobile) {
      width: 750px;
    }
  }
  &__container {
    position: relative;
    height: 100%;
    width: 100%;
    color: $color__gray;
    text-align: center;

    &.__focused, &.__active {

      & .search-input__input {
        outline: none;

        @media (--mobile) {
          /* HACK: Не знаю почему, но рамка пропадает без этого */
          border-bottom: 5px solid transparent;
        }
      }
      & .search-input__clear-btn {
        width: 100px;

      }
    }
    @media (--mobile) {
      display: table;
    }
  }
  &__input {
    display: inline-block;
    box-sizing: border-box;
    padding: 0;
    width: 231px;
    height: 100%;
    border: none;
    color: $color__gray-dark;
    font-weight: 400;
    font-size: 25px;
    font-family: $font__family;

    @media (--mobile) {
      margin-top: 3.6px;
      width: 100%;
      font-size: 36px;
      display: table-cell;
      outline: none;
      /* HACK: Не знаю почему, но рамка пропадает без этого */
      border-bottom: 5px solid transparent;
    }
  }
  &__search-btn,
  &__clear-btn {
    display: inline-block;
    height: 100%;
    vertical-align: top;
    text-align: center;
    font-size: 25px;
    line-height: $height__desktop;

    .close {
      margin-left: -57px;
      position: relative;
      top: -4px;
      font-size: 23px;
      z-index: 99999;
      cursor: pointer;
      @media (--mobile) {
        margin-left: -137px;
        font-size: 40px;
      }
    }

    i {
      vertical-align: middle !important;
    }

    @media (--mobile) {
      line-height: $height__mobile;
      display: table-cell;
      width: 100px;
      font-size: 36px;

    }
  }
  &__search-btn {
    padding: 0 30px;
    color: #399;
  }
  &__clear-btn {
    position: absolute;
    right: 0;
    top: 0;
    width: 49px;
    height: 100%;
    transition: $btn-transition;

    .close {
      &:hover {
        color: $color__gray-dark;
      }
    }
  }
}

